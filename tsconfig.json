{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "es2021"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*", "server/**/*"],
  "exclude": ["node_modules"]
}